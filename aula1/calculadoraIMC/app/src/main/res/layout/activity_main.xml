<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="altura"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/laltura"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/lpeso"
        android:layout_width="225dp"
        android:layout_height="57dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/peso"
        tools:text="peso" />

    <EditText
        android:id="@+id/laltura"
        android:layout_width="225dp"
        android:layout_height="57dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/peso"
        app:layout_constraintStart_toStartOf="@+id/altura"
        tools:text="altura" />

    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="peso"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lpeso"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/imxtext"
        app:layout_constraintEnd_toEndOf="@+id/imxtext"
        app:layout_constraintStart_toStartOf="@+id/imxtext" />

    <EditText
        android:id="@+id/imxtext"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_marginBottom="189dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Seu imc Ã©:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>